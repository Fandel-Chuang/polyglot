# Package configuration for polyglot/文达 project
# This file defines project metadata and dependencies

name = "my-awesome-project"
version = "1.0.0"
description = "A sample polyglot project demonstrating package management"
author = "Your Name <your.email@example.com>"
license = "MIT"
repository = "github.com/username/my-awesome-project"

# Dependencies - Runtime dependencies required for your project
dep.github.com/polyglot-community/math-utils = "v2.1.0"
dep.github.com/polyglot-community/http-client = "v1.5.2"
dep.gitlab.com/awesome-org/data-structures = "latest"
dep.github.com/user/graphics-lib = "branch:main"
dep.bitbucket.org/team/config-parser = "commit:abc123def"

# Development Dependencies - Only needed during development/testing
dev.github.com/polyglot-community/test-framework = "v3.0.1"
dev.github.com/polyglot-community/benchmark-tools = "latest"

# Build configuration (optional)
build.target = "release"
build.optimization = "speed"
build.output_dir = "dist"

# Compiler options (optional)
compiler.warnings = "all"
compiler.strict_mode = true
compiler.memory_checks = true

# Project metadata (optional)
project.homepage = "https://my-awesome-project.com"
project.documentation = "https://docs.my-awesome-project.com"
project.bug_reports = "https://github.com/username/my-awesome-project/issues"
project.keywords = "polyglot,library,utilities"